# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type User {
 id: ID!
 name: String!
 bio: Bio!

}

type Bio {
  id: ID!
  text: String!
  email: String!
}

type Query {
  user: User
}

input NewUser {
  name: String!
  bio_text: String!
  email: String!
}

type Mutation {
  user(input: NewUser!): User!
}